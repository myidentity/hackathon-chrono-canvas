    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "terser": "^5.39.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
